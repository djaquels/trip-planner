<p id="notice"><%= notice %></p>

<h1>Lugars</h1>

<table>
  <thead>
    <tr>
      <th>Id pais</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lugars.each do |lugar| %>
      <tr>
        <td><%= lugar.id_pais %></td>
        <td><%= lugar.nombre %></td>
        <td><%= link_to 'Show', lugar %></td>
        <td><%= link_to 'Edit', edit_lugar_path(lugar) %></td>
        <td><%= link_to 'Destroy', lugar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

